#! /bin/bash

#Hicham

clear

echo "                Nous contacter

1- Par mail
2- Par courrier
3- Par téléphone

4- Revenir au menu précédent"

while [[ $opt -lt 4 ]] 

do                                     # -lt (less than) Tant que l'utilisateur saisis un nombre inférieur à 5

read opt                               # Lecture de la saisie de l'utilisateur

case $opt in                           # Case avec la variable $opt

1) ./Menus/M1;;                        # Redirection vers le menu M1 Nouveau client
  
2) ./Menus/M2;;                        # Redirection vers le menu M2 Me connecter

3) ./Menus/M3;;                        # Redirection vers le menu M3 Rechercher un produit

4) ./Menus/M4;;                        # Redirection vers le menu M4 Nous contacter


esac                                   # Fin du case

done                                   # Fin de la boucle while
