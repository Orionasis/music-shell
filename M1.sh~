#! /bin/bash

clear

echo "                Nouveau Client

1- Créer un nouveau compte 

2- Revenir au menu précédent
"

while [[$opt -lt 2]] do                   # -lt (less than) Tant que l'utilisateur saisis un nombre inférieur à 2

read opt                                  # Lecture de la saisie de l'utilisateur

case $opt in 

2) ./Menus/MP.sh;;

esac                                      # Fin du case

done                                      # Fin de la boucle while

